          "source": {
            "label": "GitHub",
            "cmd": [
              "bash",
              "-c",
              "set -e; REAL_USER=$SUDO_USER; HOME_DIR=$(getent passwd $REAL_USER | cut -d: -f6); apt-get install -y python3-module-pip; mkdir -p /etc/modules-load.d; echo i2c-dev > /etc/modules-load.d/i2c-dev.conf; groupadd -f i2c; chown :i2c /dev/i2c-* 2>/dev/null || true; usermod -aG i2c $REAL_USER; echo 'KERNEL==\"i2c-[0-9]*\", GROUP=\"i2c\"' > /etc/udev/rules.d/10-i2c.rules; udevadm control --reload-rules; udevadm trigger; sudo -u $REAL_USER bash -c   'cd /tmp && rm -rf Monic   && git clone https://github.com/toxblh/Monic.git   && cd Monic && ./install.sh'; sudo -u $REAL_USER bash $HOME_DIR/.local/share/monitor-control/run_monitor_control.sh"
